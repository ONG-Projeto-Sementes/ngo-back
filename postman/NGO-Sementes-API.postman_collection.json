{
  "info": {
    "name": "NGO Sementes - Complete API",
    "description": "Coleção completa da API do sistema NGO Sementes incluindo autenticação, categorias de doação e doações",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\",\n  \"confirmPassword\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            }
          }
        }
      ]
    },
    {
      "name": "Donation Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/donation-categories",
              "host": ["{{base_url}}"],
              "path": ["donation-categories"]
            }
          }
        },
        {
          "name": "Get Categories with Pagination",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/donation-categories?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["donation-categories"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Search Categories",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/donation-categories?search=alimento",
              "host": ["{{base_url}}"],
              "path": ["donation-categories"],
              "query": [
                {
                  "key": "search",
                  "value": "alimento"
                }
              ]
            }
          }
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/donation-categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["donation-categories", "{{category_id}}"]
            }
          }
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Categoria Teste\",\n  \"description\": \"Descrição da categoria de teste\",\n  \"defaultUnit\": \"unidades\",\n  \"icon\": \"test-icon\",\n  \"color\": \"#FF5733\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/donation-categories",
              "host": ["{{base_url}}"],
              "path": ["donation-categories"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('category_id', response.data._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Update Category",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Categoria Atualizada\",\n  \"description\": \"Descrição atualizada\",\n  \"defaultUnit\": \"peças\",\n  \"icon\": \"updated-icon\",\n  \"color\": \"#33FF57\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/donation-categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["donation-categories", "{{category_id}}"]
            }
          }
        },
        {
          "name": "Activate/Deactivate Category",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isActive\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/donation-categories/{{category_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["donation-categories", "{{category_id}}", "status"]
            }
          }
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/donation-categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["donation-categories", "{{category_id}}"]
            }
          }
        }
      ]
    },
    {

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["tests", "dist", "node_modules"]
}
